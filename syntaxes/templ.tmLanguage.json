{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "templ",
	"patterns": [
		{
			"include": "#html"
		},
		{
			"include": "#go"
		}
	],
	"repository": {
		"html": {
			"patterns": [{
				"include": "text.html.basic"
			}]
		},
		"go": {
			"begin": "{%[\\!\\=]?",
			"end": "%}",
			"patterns": [
				{
					"include": "source.go"
				},
        {
					"match": "\\b(templ|endtempl|endfor|endif|endswitch|endcase|enddefault)\\b",
					"name": "keyword.control.go"
				}
			]
		}
	},
	"scopeName": "source.templ"
}